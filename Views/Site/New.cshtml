@model IEnumerable<LandscapeArchitectsApplication.Models.LandscapeDesignDto>
@{
    ViewBag.Title = "Create";
}

<h2>Create a New Site Data</h2>
<form action="/Site/Create" method="POST">
    <div>
        <label>Site ID: </label> <input type="text" name="SiteID" />
    </div>
    <div>
        <label>Address: </label> <input type="text" name="Address" />
    </div>
    <div>
        <label>Client Name: </label> <input type="text" name="ClientName" />
    </div>
    <div>
        <label>Architect to Assign: </label>
        <select name="DesignID">

            @foreach (var architect in Model)
            {
                <option value="@architect.DesignID">@architect.LeadArhitect</option>
            }
        </select>
    </div>
    <input type="submit" value="Add a site" />
</form>

